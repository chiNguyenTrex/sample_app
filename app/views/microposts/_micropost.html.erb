<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.list_users.image_size),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.view.post" %>
    <%= time_ago_in_words micropost.created_at %>
    <%= t "microposts.view.ago" %>
    <% if current_user? micropost.user %>
      <%= link_to t("microposts.view.delete_post"), micropost, method: :delete,
        data: {confirm: t("microposts.view.delete_confirm")} %>
    <% end %>
  </span>
</li>
