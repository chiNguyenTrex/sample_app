<% provide :title, t("users.new.edit_title") %>
<% provide :button_text, t("users.new.edit_submit") %>

<h1><%= t "users.new.edit_header" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener">
        <%= t "users.new.change_avatar" %>
      </a>
    </div>
  </div>
</div>
